{
  "name": "zalo-group-automation",
  "version": "1.0.0",
  "description": "Hệ thống tự động hóa quản lý nhóm Zalo với multi-user support",
  "main": "proxy.js",
  "scripts": {
    "dev": "node start.js",
    "dev:live": "concurrently \"npm run server\" \"npm run proxy\"",
    "server": "live-server --port=3000 --host=localhost --entry-file=index.html",
    "proxy": "node proxy.js",
    "start": "npm run dev",
    "simple": "python -m http.server 8000",
    "build": "npm run minify",
    "minify": "html-minifier --input-dir . --output-dir dist --file-ext html && npm run minify-js",
    "minify-js": "terser auth.js router.js -o dist/bundle.min.js",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "zalo",
    "automation",
    "group",
    "webhook",
    "admin-panel"
  ],
  "author": "Hailinhmacduc",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.2",
    "terser": "^5.16.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-proxy-middleware": "^3.0.5"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/zalo-group-automation.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/zalo-group-automation/issues"
  },
  "homepage": "https://github.com/yourusername/zalo-group-automation#readme"
}
