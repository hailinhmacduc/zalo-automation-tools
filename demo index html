      <script>
// Webhook URLs sẽ được load từ user config
    let scanWebhook = '/api/webhook/zalo-automation';
    let sendWebhook = '/api/webhook/zalo-sent-text-image';
    let postWebhook = '/api/webhook/zalo-post-group';
    let inviteWebhook = '/api/webhook/zalo-invite-member';
    let scanMembersWebhook = '/api/webhook/zalo-scan-members';

    const ADMIN_USERNAME = 'Admin';
    const ADMIN_PASSWORD = 'nguyenduc139@';

    // Function để load webhook config từ user
    function loadWebhookConfig() {
      const currentUser = JSON.parse(localStorage.getItem('currentUser') || '{}');
      if (currentUser && currentUser.scanWebhook) {
        scanWebhook = currentUser.scanWebhook;
        sendWebhook = currentUser.sendWebhook;
        postWebhook = currentUser.postWebhook || '/api/webhook/zalo-post-group';
        inviteWebhook = currentUser.inviteWebhook;
        scanMembersWebhook = currentUser.scanMembersWebhook || '/api/webhook/zalo-scan-members';
        
        console.log('Loaded webhook config:', {
          scanWebhook,
          sendWebhook,
          postWebhook,
          inviteWebhook,
          scanMembersWebhook
        });
      }
    }

    const $ = id => document.getElementById(id);
    const toggle = (el, show) => {
      if (!el) {
        console.warn('Toggle called with null element');
        return;
      }
      el.classList[show ? 'remove' : 'add']('hidden');
    };

    // Elements
